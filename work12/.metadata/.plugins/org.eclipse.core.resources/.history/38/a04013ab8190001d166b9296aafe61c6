package com.test.ch07;

public class Ex10_1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Cinema c1 = new Cinema("어벤져스");
		Cinema.printInfo(c1);
		
		Cinema c2 = new Cinema("연애의 온도",180);
		Cinema.printInfo(c2);
		
		Cinema c3 = new Cinema("아바타",180, "판타지");
		Cinema.printInfo(c3);
	}

}

class Cinema {
	String title;
	int hour;
	String gerne;
	
	Cinema (String title) {
		this("제목입력", 0, "저자입력");
	}
	
	Cinema (String title, int hour) {
		this("제목입력", hour, "저자입력");
	}
	
	Cinema (String title, int hour, String gerne) {
		this.title = title;
		this.hour = hour;
		this.gerne = gerne;
	}
	
	
	
	static void printInfo(Cinema c) {
		System.out.printf("제목: %s%n상영시간: %d%n장르: %s%n%n", c.title, c.hour, c.gerne);
	}
}
/*
문제 1.
이전 문제에서 작성한 영화 클래스의 생성자를 this를 사용하도록 수정하세요. 
*/