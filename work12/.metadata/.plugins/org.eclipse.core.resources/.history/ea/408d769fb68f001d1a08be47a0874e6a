package com.test.ch07;

public class Ex06ClassMethod {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		Book5 b1 = new Book5();
		/*b1.bookNo = Book5.generateBookNo()*/
		System.out.println(b1.bookNo);
		b1.setPrice(20000);
		
		System.out.println();
		
		Book5 b2 = new Book5();
		/*b2.bookNo = Book5.generateBookNo();*/
		System.out.println(b2.bookNo);
		b2.setPrice(40000);


	}

}

class Book5 {
	String title;
	int bookNo;
	int price;
	
	/*static int generateBookNo() {
		return (int)(Math.random()*9000)+1000;
	}*/
	
	void setPrice(int price) {
		System.out.println("책의 가격은 " + price +"원 입니다.");
		int dollar = price/1250;
		System.out.println("책의 달러 가격은 " + dollar +" 달러 입니다.");
	}
}

